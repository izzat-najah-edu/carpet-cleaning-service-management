<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<AnchorPane prefHeight="700.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/19"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="stu.najah.se.gui.control.CustomersController">
    <children>
        <Label layoutX="455.0" layoutY="17.0" text="Customers" underline="true">
            <font>
                <Font size="30.0"/>
            </font>
        </Label>
        <TableView fx:id="tableCustomers" layoutX="455.0" layoutY="67.0" prefHeight="585.0"
                   prefWidth="487.0">
            <columns>
                <TableColumn prefWidth="75.0" text="Id"/>
                <TableColumn prefWidth="120.0" text="Name"/>
                <TableColumn prefWidth="109.0" text="Phone"/>
                <TableColumn prefWidth="180.0" text="Address"/>
            </columns>
        </TableView>
        <Button styleClass="refresh" layoutX="610.0" layoutY="27.0" mnemonicParsing="false"
                onAction="#refreshTable" prefHeight="22.0" prefWidth="56.0" text="Refresh"/>
        <TextField styleClass="name" fx:id="textFieldName" layoutX="123.0" layoutY="144.0" prefHeight="25.0"
                   prefWidth="232.0" promptText="Select to Show"/>
        <TextField styleClass="phone" fx:id="textFieldPhone" layoutX="123.0" layoutY="184.0" prefHeight="25.0"
                   prefWidth="232.0" promptText="Select to Show"/>
        <TextField styleClass="address" fx:id="textFieldAddress" layoutX="123.0" layoutY="225.0" prefHeight="25.0"
                   prefWidth="233.0" promptText="Select to Show"/>
        <Label layoutX="61.0" layoutY="148.0" text="Name:"/>
        <Label layoutX="61.0" layoutY="188.0" text="Phone:"/>
        <Label layoutX="61.0" layoutY="229.0" text="Address:"/>
        <Button styleClass="create" layoutX="80.0" layoutY="281.0"
                mnemonicParsing="false" onAction="#createCustomer" prefHeight="36.0"
                prefWidth="259.0" text="Create New Customer"/>
        <Button styleClass="update" layoutX="81.0" layoutY="325.0"
                mnemonicParsing="false" onAction="#updateCustomer" prefHeight="36.0"
                prefWidth="258.0" text="Update Selected Customer"/>
        <Button styleClass="delete" layoutX="80.0" layoutY="368.0"
                mnemonicParsing="false" onAction="#deleteCustomer" prefHeight="35.0"
                prefWidth="259.0" text="Delete Selected Customer"/>
        <Button styleClass="clear" layoutX="123.0" layoutY="79.0" mnemonicParsing="false"
                onAction="#clear" prefHeight="25.0" prefWidth="59.0" text="Clear"/>
        <Label layoutX="53.0" layoutY="69.0" text="Edit" underline="true">
            <font>
                <Font size="30.0"/>
            </font>
        </Label>
    </children>
</AnchorPane>
