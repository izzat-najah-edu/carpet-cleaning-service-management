<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.text.*?>
<AnchorPane prefHeight="700.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/19"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="stu.najah.se.ui.control.OrdersController">
    <children>
        <TableView fx:id="tableOrders" layoutX="24.0" layoutY="121.0" prefHeight="411.0" prefWidth="246.0">
            <columns>
                <TableColumn prefWidth="75.0" text="OrderId"/>
                <TableColumn prefWidth="166.0" text="CustomerName"/>
            </columns>
        </TableView>
        <Label layoutX="24.0" layoutY="29.0" prefHeight="34.0" prefWidth="156.0" text="Orders:" underline="true">
            <font>
                <Font size="30.0"/>
            </font>
        </Label>
        <TextField fx:id="textFieldCustomerName" layoutX="24.0" layoutY="82.0" onKeyTyped="#searchOrder"
                   prefHeight="25.0" prefWidth="246.0" promptText="Search By Customer Name"/>
        <TableView fx:id="tableOrderProducts" layoutX="292.0" layoutY="82.0" prefHeight="278.0" prefWidth="687.0">
            <columns>
                <TableColumn prefWidth="69.0" text="OrderId"/>
                <TableColumn prefWidth="81.0" text="ProductId"/>
                <TableColumn prefWidth="367.0" text="SpecialTreatment"/>
                <TableColumn prefWidth="86.0" text="Finished"/>
                <TableColumn prefWidth="72.0" text="Price"/>
            </columns>
        </TableView>
        <Label layoutX="292.0" layoutY="29.0" prefHeight="45.0" prefWidth="254.0" text="Treated Products:"
               underline="true">
            <font>
                <Font size="30.0"/>
            </font>
        </Label>
        <Label layoutX="39.0" layoutY="575.0" prefHeight="30.0" prefWidth="126.0" text="Order Status:">
            <font>
                <Font size="20.0"/>
            </font>
        </Label>
        <Label fx:id="labelOrderStatus" layoutX="169.0" layoutY="575.0" prefHeight="30.0" prefWidth="74.0" text=" ">
            <font>
                <Font size="20.0"/>
            </font>
        </Label>
        <Button layoutX="65.0" layoutY="618.0" mnemonicParsing="false" onAction="#generateInvoice" prefHeight="30.0"
                prefWidth="164.0" text="Generate Invoice"/>
        <Label layoutX="320.0" layoutY="435.0" prefHeight="30.0" prefWidth="99.0" text="Special Treatment:"/>
        <TextField fx:id="textFieldSpecialTreatment" layoutX="425.0" layoutY="435.0" prefHeight="30.0" prefWidth="355.0"
                   promptText="Select to Show"/>
        <Label layoutX="320.0" layoutY="370.0" prefHeight="46.0" prefWidth="66.0" text="Edit:" underline="true">
            <font>
                <Font size="31.0"/>
            </font>
        </Label>
        <Button layoutX="139.0" layoutY="39.0" mnemonicParsing="false" onAction="#refreshOrdersThenProductsThenFields"
                text="Refresh"/>
        <Button layoutX="546.0" layoutY="39.0" mnemonicParsing="false" onAction="#refreshProductsThenFields"
                text="Refresh"/>
        <Button layoutX="398.0" layoutY="381.0" mnemonicParsing="false" onAction="#clearSelectedOrderProduct"
                text="Clear"/>
        <CheckBox fx:id="checkBoxFinished" layoutX="660.0" layoutY="477.0" mnemonicParsing="false" prefHeight="25.0"
                  prefWidth="85.0" text="Finished"/>
        <Label layoutX="390.0" layoutY="481.0" text="Price:"/>
        <TextField fx:id="textFieldPrice" layoutX="425.0" layoutY="475.0" prefHeight="30.0" prefWidth="205.0"
                   promptText="Select to Show"/>
        <Rectangle arcHeight="5.0" arcWidth="5.0" fill="TRANSPARENT" height="98.0" layoutX="302.0" layoutY="421.0"
                   mouseTransparent="true" stroke="BLACK" strokeType="INSIDE" width="679.0"/>
        <Rectangle arcHeight="5.0" arcWidth="5.0" fill="TRANSPARENT" height="124.0" layoutX="24.0" layoutY="550.0"
                   mouseTransparent="true" stroke="BLACK" strokeType="INSIDE" width="246.0"/>
        <Button layoutX="814.0" layoutY="435.0" mnemonicParsing="false" onAction="#updateOrderProduct" prefHeight="30.0"
                prefWidth="156.0" text="Update Product"/>
        <Button layoutX="814.0" layoutY="603.0" mnemonicParsing="false" onAction="#createOrderProduct" prefHeight="30.0"
                prefWidth="156.0" text="Add to Order"/>
        <Button layoutX="814.0" layoutY="475.0" mnemonicParsing="false" onAction="#deleteOrderProduct" prefHeight="30.0"
                prefWidth="156.0" text="Delete Product"/>
        <Label layoutX="317.0" layoutY="595.0" text="Selected Customer:"/>
        <Label fx:id="labelSelectedCustomer" layoutX="441.0" layoutY="595.0" prefHeight="17.0" prefWidth="338.0"
               text=" "/>
        <Label layoutX="318.0" layoutY="631.0" text="Available Products:"/>
        <ComboBox fx:id="comboBoxAvailableProducts" layoutX="441.0" layoutY="629.0" prefHeight="25.0"
                  prefWidth="338.0"/>
        <Rectangle arcHeight="5.0" arcWidth="5.0" fill="TRANSPARENT" height="98.0" layoutX="302.0" layoutY="575.0"
                   mouseTransparent="true" stroke="BLACK" strokeType="INSIDE" width="679.0"/>
        <Label layoutX="316.0" layoutY="524.0" prefHeight="46.0" prefWidth="66.0" text="Add:" underline="true">
            <font>
                <Font size="31.0"/>
            </font>
        </Label>
    </children>
</AnchorPane>
