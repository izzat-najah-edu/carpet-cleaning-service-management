<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<AnchorPane fx:id="loginPane" prefHeight="400.0" prefWidth="600.0" stylesheets="@styles/main.css"
            xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="stu.najah.se.ui.control.LoginController">
    <children>
        <TextField fx:id="textFieldUsername" layoutX="213.0" layoutY="143.0" promptText="Enter Username"
                   styleClass="username"/>
        <PasswordField fx:id="textFieldPassword" layoutX="214.0" layoutY="188.0" prefHeight="28.0" prefWidth="173.0"
                       promptText="Enter Password" styleClass="password"/>
        <Button fx:id="buttonLogin" layoutX="255.0" layoutY="237.0" mnemonicParsing="false" onAction="#login"
                prefHeight="25.0" prefWidth="91.0" styleClass="login" text="Login"/>
        <Button fx:id="buttonExit" layoutX="534.0" layoutY="14.0" mnemonicParsing="false" onAction="#exit"
                styleClass="exit" text="Exit"/>
    </children>
</AnchorPane>
